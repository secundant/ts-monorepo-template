{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ESNext"],
    "types": ["node"],
    "target": "ESNext",
    "module": "commonjs",
    "sourceMap": true,
    "incremental": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "include": ["./**/*.ts"]
}
