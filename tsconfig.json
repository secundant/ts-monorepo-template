{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noErrorTruncation": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@app": ["packages/*"],
      "@my-project/icons": ["packages/icons/index.ts"],
      "@my-project/icons/*": ["packages/icons/*"],
      "@my-project/client-web/*": ["packages/client-web/*"],
      "@my-project/shared/*": ["packages/shared/*"],
      "@my-project/uikit-web/*": ["packages/uikit-web/*"],
      "@my-project/graphql/*": ["packages/graphql/*"]
    }
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.tsx"]
}
