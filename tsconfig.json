{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "types": ["jest", "node"],
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noErrorTruncation": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@app": ["packages/*"],
      "@app/icons": ["packages/icons/index.ts"],
      "@app/icons/*": ["packages/icons/*"],
      "@app/react-nextjs/*": ["packages/react-nextjs/*"],
      "@app/react-shared/*": ["packages/react-shared/*"],
      "@app/react-material-ui-kit/*": ["packages/react-material-ui-kit/*"],
      "@app/graphql/*": ["packages/graphql/*"]
    }
  },
  "include": ["./packages/**/*.ts", "./packages/**/*.tsx"]
}
